<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CardView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMascota"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_bottom_cardview"
    android:layout_marginLeft="@dimen/margin_Left_right_top_cardview"
    android:layout_marginRight="@dimen/margin_Left_right_top_cardview"
    android:layout_marginTop="@dimen/margin_Left_right_top_cardview"
    android:elevation="@dimen/elevation_cardview"
    CardView:cardCornerRadius="@dimen/corner_radius_cardview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/dscImageMascota"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_Left_right_detalleimg"
            android:layout_marginRight="@dimen/margin_Left_right_detalleimg"
            android:layout_marginTop="@dimen/margin_top_detalleimg">

            <ImageButton
                android:id="@+id/btnLike"
                android:layout_width="@dimen/layout_width_height_image"
                android:layout_height="@dimen/layout_width_height_image"
                android:layout_gravity="start|center_vertical"
                android:layout_marginLeft="@dimen/layout_margin_left_image"
                android:background="@drawable/dogbone"
                android:contentDescription="@string/dscImageLike"/>

            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/layout_margin_left_textview"
                android:textSize="@dimen/textsize_textview"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvContadorLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginRight="@dimen/layout_margin_right_textview"
                android:textSize="@dimen/textsize_textview" />

            <ImageView
                android:layout_width="@dimen/layout_width_height_image"
                android:layout_height="@dimen/layout_width_height_image"
                android:layout_gravity="end|center_vertical"
                android:src="@drawable/dogbonestar"
                android:contentDescription="@string/dscImageBoneStar"/>

        </FrameLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>